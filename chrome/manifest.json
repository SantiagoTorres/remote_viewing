{
  "manifest_version": 2,

  "name": "Remote Viewing",
  "description": "To view a web page more safely, this extension renders the page remotely on a virtual machine instead.",
  "homepage_url": "https://github.com/SantiagoTorres/remote_viewing",
  "version": "0.1",
  
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Remote Viewing",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "http://*.amazonaws.com/",
    "contextMenus",
    "storage"
  ]
}
